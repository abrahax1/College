<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayInfo"
    tools:layout_editor_absoluteX="23dp"
    tools:layout_editor_absoluteY="-44dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="1dp"
        android:text="Country: "
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="1dp"
        android:text="City:"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:text="City pop:"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="108dp"
        android:layout_height="25dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="464dp"
        android:text="Metro pop:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/display_country"
        android:layout_width="150dp"
        android:layout_height="27dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="72dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/display_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_city"
        android:layout_width="149dp"
        android:layout_height="25dp"
        android:layout_marginEnd="73dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/display_population"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_country" />

    <TextView
        android:id="@+id/display_population"
        android:layout_width="144dp"
        android:layout_height="32dp"
        android:layout_marginEnd="76dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/display_metropolitan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_city" />

    <TextView
        android:id="@+id/display_metropolitan"
        android:layout_width="147dp"
        android:layout_height="21dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="466dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_population" />
</androidx.constraintlayout.widget.ConstraintLayout>